pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
function _init()
	ball_x = 20
	ball_dx = 2
	ball_radius = 2
	cls()
end

function _update()
	ball_x = ball_x + ball_dx
	check_bounce()
end

function check_bounce()
	if ball_x+ball_radius > 127 then
		ball_dx = -ball_dx
	end
	if ball_x-ball_radius < 0 then
		ball_dx = -ball_dx
	end
end

function _draw()
	cls()
	circfill(ball_x,64,2,10)
end

